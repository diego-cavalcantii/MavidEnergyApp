<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape>
            <solid android:color="#66000000" /> <!-- Cor da sombra com opacidade -->
            <corners
                android:topLeftRadius="20dp"
                android:bottomLeftRadius="0dp"
                android:topRightRadius="20dp"
                android:bottomRightRadius="0dp" />
        </shape>
        <padding
            android:left="4dp"
            android:top="4dp"
            android:right="4dp"
            android:bottom="4dp" />
    </item>

    <!-- Fundo principal -->
    <item>
        <shape>
            <solid android:color="#FAFAFA" />
            <corners
                android:topLeftRadius="20dp"
                android:bottomLeftRadius="0dp"
                android:topRightRadius="20dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
</layer-list>
